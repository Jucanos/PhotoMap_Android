<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Activity.AddStoryActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout_ab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_tb"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </com.google.android.material.appbar.AppBarLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_down"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout_up">

        <RelativeLayout
            android:id="@+id/relativeLayout_vp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <com.jucanos.photomap.Viewpager.CustomViewPager
                android:id="@+id/viewPager_vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                />

            <ImageView
                android:id="@+id/imageView_left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_margin="16dp"
                android:background="@drawable/layout_black_transp_circ_ripple"
                android:scaleType="center"
                android:src="@drawable/ic_icon_arrow_left_nobar_white" />

            <ImageView
                android:id="@+id/imageView_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_margin="16dp"
                android:background="@drawable/layout_black_transp_circ_ripple"
                android:scaleType="center"
                android:src="@drawable/ic_icon_arrow_right_nobar_white" />


            <ImageView
                android:id="@+id/imageView_snap"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/viewPager_vp"
                android:layout_alignLeft="@+id/viewPager_vp"
                android:layout_alignBottom="@+id/viewPager_vp"
                android:layout_margin="16dp"
                android:background="@drawable/layout_black_transp_circ_ripple"
                android:padding="8dp"
                android:scaleType="center"
                android:src="@drawable/ic_icon_crop_free_white" />

            <ImageView
                android:id="@+id/imageView_rotate"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/viewPager_vp"
                android:layout_alignRight="@+id/viewPager_vp"
                android:layout_alignBottom="@+id/viewPager_vp"
                android:layout_margin="16dp"
                android:background="@drawable/layout_black_transp_circ_ripple"
                android:padding="8dp"
                android:scaleType="center"
                android:src="@drawable/ic_icon_rotate_right_white" />


        </RelativeLayout>

        <com.rd.PageIndicatorView
            android:id="@+id/pageIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout_vp"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            app:piv_animationType="fill"
            app:piv_dynamicCount="true"
            app:piv_interactiveAnimation="true"
            app:piv_padding="12dp"
            app:piv_radius="8dp"
            app:piv_selectedColor="@android:color/holo_red_light"
            app:piv_unselectedColor="#ffffff"
            app:piv_viewPager="@id/viewPager_vp" />

    </RelativeLayout>


</RelativeLayout>
