<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clipChildren="false"
    android:background="@drawable/layout_rounded_dialog"
    android:padding="15dp"
    >

    <TextView
        android:id="@+id/textView_groupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="그룹 이름"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
     />

    <LinearLayout
        android:layout_below="@+id/textView_groupName"
        android:id="@+id/linearLayout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <Button
          android:id="@+id/button_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="이름 설정"
          android:gravity="center_vertical"
          android:background="?attr/selectableItemBackground"
          style="?attr/borderlessButtonStyle"
          />

        <Button
            android:id="@+id/button_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="프로필사진변경"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            style="?attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/button_rep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나가기"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            style="?attr/borderlessButtonStyle"
            />
    </LinearLayout>
</RelativeLayout>